# user/pass to configure admin access
export admin_email="admin@think.com"
export admin_pass=apic4you

# Path where apic images are available
export sources=/home/kadmin/sources

# apic version
# used to upload package in docker local registry
# Example: v2018.4.1.10
export apicversion=v2018.4.1.10

# apicup package filename
export apicupversion=apicup-linux_lts_v2018.4.1.10

# api gateway package
export dmpimagefilename=dpm20184110.lts.tar.gz
export idgimagefilename=idg_dk20184110.lts.prod.tar.gz

# Replace with you internal IP for apiserver on k8s master  
# for pod_network_cidr 10.244.0.0/16 or 192.168.0.0/16
export apiserver_advertise_address=PRIVATEIP
export pod_network_cidr=192.168.0.0/16

# Endpoint
export ep_api=api.PUBLICIP.nip.io
export ep_apim=manager.PUBLICIP.nip.io
export ep_cm=cloud.PUBLICIP.nip.io
export ep_consumer=consumer.PUBLICIP.nip.io
export ep_gw=gw.PUBLICIP.nip.io
export ep_gwd=gwd.PRIVATEIP.nip.io
export ep_ai=ai.PRIVATEIP.nip.io
export ep_ac=ac.PRIVATEIP.nip.io
export ep_padmin=padmin.PRIVATEIP.nip.io
export ep_portal=portal.PUBLICIP.nip.io

# (Optional) Remote gateway
export ep_remote_gw=gw.REMOTEPUBLICIP.nip.io
export ep_remote_gwd=gwd.REMOTEPRIVATEIP.nip.io

# Create assets for demo
export porg_name=demoOrg
export porg_user=demo
export porg_password=apic4you

# SMTP Server
export smtpServer=PRIVATEIP
export smtpServerPort=2525
export smtpUser=
export smtpPass=

# Docker Registry
export registry=localhost:80/apiconnect

# Datapower type equals native GW datapower-api-gateway, use datapower-gateway for classic
export ep_gwType=datapower-api-gateway

